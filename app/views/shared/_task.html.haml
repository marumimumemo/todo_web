= link_to edit_task_path(task.id) do
  .task
    .title
      = task.title
    .scheduled
      = task.scheduled
    .completion
      = task.completion
    .priority
      = task.priority
    = link_to '削除', task_path(task), class: 'delete_buttun', method: :delete, data: {confirm: "このタスクを本当に削除しますか?"}
